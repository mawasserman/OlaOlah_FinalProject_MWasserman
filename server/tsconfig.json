{
    "compilerOptions": {
      "target": "esnext",         // Use 'esnext' for better compatibility with async/await
      "lib": ["dom", "es2015"],
      "jsx": "react",
      "module": "commonjs",       // Keep this as 'commonjs' for Node.js compatibility
      "strict": true,
      "esModuleInterop": true,    // Necessary for compatibility with ES6 imports
      "skipLibCheck": true,       // Skips type checking for library files
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowJs": true,            // Allow JavaScript files if needed
      "outDir": "./dist",         // Output directory for compiled files
      "rootDir": "./src"          // Root directory of your TypeScript source files
    },
    "include": ["src/**/*"]       // Include all TypeScript files under 'src'
  }
  